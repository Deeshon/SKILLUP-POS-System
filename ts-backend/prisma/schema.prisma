generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id             String   @id @default(uuid())
  name           String   @unique
  email          String   @unique
  phone          String
  location       String
  createdAt      DateTime @default(now())
  users          User[]
  stores         Store[]
  companyLogoUrl String
}

model User {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  phone           String
  username        String
  password        String
  role            Role
  Company         Company  @relation(fields: [companyId], references: [id])
  companyId       String
  Store           Store[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  profileImageUrl String
}

model Store {
  id        String    @id @default(uuid())
  name      String
  location  String
  Company   Company   @relation(fields: [companyId], references: [id])
  companyId String
  users     User[]
  Product   Product[]

  @@unique([companyId, name])
}

enum Role {
  ADMIN
  CASHIER
}

model Category {
  id      String    @id @default(uuid())
  name    String
  slug    String
  Product Product[]
}

model Brand {
  id      String    @id @default(uuid())
  name    String
  slug    String
  Product Product[]
}

model Product {
  id          String   @id @default(uuid())
  store       Store    @relation(fields: [storeId], references: [id])
  storeId     String
  name        String
  slu         String
  sku         String
  description String
  quantity    String
  price       Float
  unit        Unit
  imageUrls   String[]
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  Brand       Brand    @relation(fields: [brandId], references: [id])
  brandId     String
}

enum Unit {
  KG
  PC
}
